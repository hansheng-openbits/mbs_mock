# RMBS Platform Environment Configuration
# ========================================
# Copy this file to .env and customize for your environment.
# All variables have sensible defaults for local development.

# ============================================================================
# API Server Configuration
# ============================================================================
# RMBS_API_HOST=127.0.0.1
# RMBS_API_PORT=8000
# RMBS_API_WORKERS=1
# RMBS_API_RELOAD=false

# ============================================================================
# Storage Paths
# ============================================================================
# Override these for production deployments with persistent storage
# RMBS_DEALS_DIR=/app/data/deals
# RMBS_COLLATERAL_DIR=/app/data/collateral
# RMBS_PERFORMANCE_DIR=/app/data/performance
# RMBS_MODELS_DIR=/app/models
# RMBS_SCENARIOS_DIR=/app/data/scenarios
# RMBS_RESULTS_DIR=/app/data/results
# RMBS_AUDIT_LOG_PATH=/app/data/results/audit_events.jsonl

# ============================================================================
# Logging
# ============================================================================
# RMBS_LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# Security
# ============================================================================
# RMBS_ENABLE_CORS=true
# RMBS_CORS_ORIGINS=["http://localhost:8501", "http://127.0.0.1:8501"]
# RMBS_REQUIRE_RBAC=true

# ============================================================================
# Upload & Performance Limits
# ============================================================================
# RMBS_MAX_UPLOAD_SIZE_MB=100
# RMBS_JOB_TIMEOUT_SECONDS=600
# RMBS_MAX_CONCURRENT_JOBS=10

# ============================================================================
# Simulation Defaults
# ============================================================================
# RMBS_DEFAULT_HORIZON_PERIODS=60
# RMBS_DEFAULT_CPR=0.10
# RMBS_DEFAULT_CDR=0.01
# RMBS_DEFAULT_SEVERITY=0.40
# RMBS_DEFAULT_RECOVERY_LAG_MONTHS=12

# ============================================================================
# ML Model Configuration
# ============================================================================
# RMBS_ML_ENABLED_BY_DEFAULT=false
# RMBS_DEFAULT_RATE_SCENARIO=base  # Options: rally, selloff, base
# RMBS_DEFAULT_START_RATE=0.045
# RMBS_DEFAULT_RATE_SENSITIVITY=1.0
# RMBS_DEFAULT_FEATURE_SOURCE=simulated  # Options: simulated, market_rates

# ============================================================================
# Loss Severity Model Parameters
# ============================================================================
# RMBS_SEVERITY_MODEL_ENABLED=true
# RMBS_SEVERITY_BASE=0.35
# RMBS_SEVERITY_LTV_COEFFICIENT=0.004
# RMBS_SEVERITY_FICO_COEFFICIENT=-0.0002
# RMBS_SEVERITY_HPI_SENSITIVITY=0.15
# RMBS_SEVERITY_MIN=0.10
# RMBS_SEVERITY_MAX=0.80

# ============================================================================
# Clean-Up Call Configuration
# ============================================================================
# RMBS_CLEANUP_CALL_ENABLED=true
# RMBS_CLEANUP_CALL_THRESHOLD=0.10  # 10% of original balance

# ============================================================================
# Database & Cache (Future Use)
# ============================================================================
# Uncomment for PostgreSQL storage
# RMBS_DATABASE_URL=postgresql://user:password@localhost:5432/rmbs

# Uncomment for Redis job queue
# RMBS_REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Web3 Integration
# ============================================================================
# RMBS_WEB3_ENABLED=false
# RMBS_WEB3_RPC_URL=https://arb1.arbitrum.io/rpc
# RMBS_WEB3_ADMIN_PRIVATE_KEY=
# RMBS_WEB3_DEFAULT_GAS=1000000
# RMBS_WEB3_TRANCHE_FACTORY=0x...
# RMBS_WEB3_TRANSFER_VALIDATOR=0x...
# RMBS_WEB3_SERVICER_ORACLE=0x...
# RMBS_WEB3_WATERFALL_ENGINE=0x...
